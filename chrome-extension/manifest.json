{
  "manifest_version": 3,
  "name": "Sacco",
  "version": "1.0.0",
  "description": "Chrome extension for Sacco with Supabase authentication",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://*.supabase.co/*"
  ],
  "background": {
    "service_worker": "dist/background/background.js"
  },
  "action": {
    "default_popup": "dist/popup/popup.html",
    "default_title": "Sacco"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content/content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "public/icons/icon16.png",
    "32": "public/icons/icon32.png",
    "48": "public/icons/icon48.png",
    "128": "public/icons/icon128.png"
  }
}
